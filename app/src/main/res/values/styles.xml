<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="windowActionModeOverlay">true</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="Widget.Lynx.Button" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="strokeColor">@color/colorPrimary</item>
    </style>

    <style name="Widget.Lynx.BottomAppBar" parent="Widget.MaterialComponents.BottomAppBar">
        <item name="backgroundTint">@color/colorPrimary</item>
    </style>

    <style name="Widget.Lynx.Backdrop" parent="">
        <item name="android:background">@color/colorPrimary</item>
    </style>

    <style name="Widget.Shrine.Button.TextButton" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:textColor">#000000</item>
    </style>

    <style name="Widget.Lynx.TextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:paddingBottom">8dp</item>
        <item name="android:textColorHint">?attr/colorPrimaryDark</item>
    </style>

    <style name="TextAppearance.Lynx.Title" parent="TextAppearance.AppCompat.Display1">
        <item name="textAllCaps">true</item>
        <item name="android:textColor">@color/colorPrimary</item>
    </style>

    <style name="TextAppearance.Lynx.ForPass" parent="Base.TextAppearance.AppCompat.Body2">
        <item name="textAllCaps">true</item>
        <item name="android:textColor">@color/colorPrimary</item>
    </style>

    <style name="TextAppearance.Lynx.Username" parent="TextAppearance.MaterialComponents.Subtitle1">
        <item name="textAllCaps">true</item>
        <item name="android:textColor">@color/colorPrimary</item>
    </style>
</resources>
